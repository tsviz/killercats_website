@page
@model KillerCatsFromOuterSpace.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
    var latestEvents = Model.UpcomingEvents.Take(2);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        .events-section {
            background-color: rgba(248, 249, 250, 0.9);
            padding: 30px;
            margin: 40px auto;
            border-radius: 8px;
            max-width: 800px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            position: relative;
            z-index: 1;
        }

        .background-wrapper {
            position: relative;
            min-height: 500px;
            overflow: hidden;
        }

        .background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .background-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.3;
        }
    </style>
</head>
<body>
    <main class="container-fluid px-4">
        <div class="row">
            <div class="col-12 position-relative">
                <img src="~/images/guitar.png" alt="Electric Guitar" class="spinning-guitar left">
                <img src="~/images/guitar.png" alt="Electric Guitar" class="spinning-guitar right">
                <section class="jumbotron text-center">
                    <h1 class="display-4">@Model.BandName</h1>
                    <p class="lead">@Model.BandDescription</p>
                </section>
            </div>
        </div>

        <div class="position-relative background-wrapper">
            <div class="background-image">
                <img src="~/images/band-playing.jpeg" alt="Band Playing">
            </div>
            <div class="main-content">
                <section class="events-section">
                    <h2>Upcoming Events</h2>
                    <ul class="list-group">
                        @foreach (var evt in latestEvents)
                        {
                            <li class="list-group-item">
                                <strong>Date:</strong> @evt.Date <br>
                                <strong>Location:</strong> <a href="https://www.google.com/maps/search/?api=1&query=@evt.Location" target="_blank">@evt.Location</a> <br>
                                <strong>Description:</strong> @evt.Description
                            </li>
                        }
                    </ul>
                </section>
            </div>
        </div>
        <section id="about" class="about-section">
            <h2>About the Band</h2>
            <div class="row">
                @foreach (var member in Model.BandMembers)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@member.Name</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@member.Instrument</h6>
                                <p class="card-text">@member.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>