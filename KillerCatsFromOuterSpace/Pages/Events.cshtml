@page
@model KillerCatsFromOuterSpace.Pages.EventsModel
@{
    ViewData["Title"] = "Events";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .events-section {
            background-color: #f8f9fa;
            padding: 20px;
            margin-top: 20px;
            border-radius: 8px;
        }
        .events-section h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .container {
            max-width: 960px;
        }
        .home-button {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header class="jumbotron text-center bg-dark text-white">
        <h1 class="display-4">All Events</h1>
    </header>
    <main class="container">
        <section class="events-section">
            <h1>Upcoming Events throughout the year</h1>
            <p>Join us for our upcoming events in various locations. Click on the location to view it on Google Maps.</p>
            <ul class="list-group">
                @foreach (var evt in Model.UpcomingEvents)
                {
                    <li class="list-group-item">
                        <div class="event-details">
                            <p><strong>Date:</strong> @evt.Date</p>
                            <p><strong>Location:</strong> <a href="https://www.google.com/maps/search/?api=1&query=@evt.Location" target="_blank">@evt.Location</a></p>
                            <p><strong>Description:</strong> @evt.Description</p>
                        </div>
                    </li>
                }
            </ul>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>